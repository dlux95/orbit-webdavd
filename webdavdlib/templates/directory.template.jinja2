<!doctype html>
<html lang="en">
<head>
  <title>WebDAV - {{ path }}</title>
    <style>
        body{
            background: #273469;
            font-family: Verdana, "Lucida Sans Unicode", sans-serif;
        }
        .container{
             background: #fff;
            max-width: 960px;
            margin: 5px auto;
            border-radius: 2px;
            padding: 10px 20px;
        }
        ul{
            padding: 0;
            margin: 0 -15px;
        }
        a {
            margin: 1rem;
            padding-left: 2rem;
            background-repeat: no-repeat;
            display: list-item;
            list-style-type: none;
        }
        a.file {
            background-image: url("data:image/svg+xml;base64,");
            background-position-x: 0.2rem;
        }
        a.folder {
            background-image: url("data:image/svg+xml;base64,");
        }
        a.dotfile { font-style: italic; }
        body.dothidden a.dotfile{ display: none; }
    </style>
</head>
<body id="body" class="dothidden">

            <div class="container">
                <h2>{{ path }}</h2>
            </div>
            <div class="container">
                <button onclick="toggleDot()">Toggle Hidden</button>
            </div>
            <div class="container">
                <ul>
                {% for child in children %}
                    {% if child["directory"] %}
                        <a class="folder{% if child["hidden"] %} dotfile {% endif %}" href="{{ child["path"] }}">{{ child["name"] }}</a>
                    {% else %}
                        <a class="file{% if child["hidden"] %} dotfile {% endif %}" href="{{ child["path"] }}">{{ child["name"] }}</a>
                    {% endif %}
                {% endfor %}
                </ul>
            </div>
    <script>
        function toggleDot(){
            if(document.getElementById("body").getAttribute("class") == "dothidden") {
                document.getElementById("body").setAttribute("class", "");
            }else{
                document.getElementById("body").setAttribute("class", "dothidden");
            }
        }
    </script>
</body>
</html>